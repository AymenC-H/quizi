<resources>
    <!-- Base application theme.-->
    <style name="Base.Theme.Quiz" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="background">@drawable/back_img</item>
        <item name="android:textColor">#8947CC</item>
        <item name="android:textSize">40sp</item>

    </style>
    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#B264FF</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/comme_bold</item>
    </style>
    <style name="MyAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorAccent">@color/mediumPurple</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColorPrimary">@color/violet</item>
        <item name="android:textColorSecondary">@color/purple</item>
    </style>
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#9A46ED</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/comme_bold</item>
    </style>

</resources>
